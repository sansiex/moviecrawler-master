<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>MovieCrawlerMaster</display-name>
    <welcome-file-list>
        <welcome-file>page?page=dashboard</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>resteasy.resources</param-name>
        <param-value>
            com.dianping.sansi.moviecrawler.master.resource.TestResource
            ,com.dianping.sansi.moviecrawler.master.resource.LogResource
        </param-value>
    </context-param>
    <listener>
        <listener-class>
            org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>redirectServlet</servlet-name>
        <servlet-class>com.dianping.sansi.moviecrawler.master.web.PageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>redirectServlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restService</servlet-name>
        <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
        <init-param>
            <param-name>applicationConfigLocation</param-name>
            <param-value>/WEB-INF/resources</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>restService</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>